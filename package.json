{
  "name": "nozoma",
  "version": "1.0.0",
  "private": true,
  "engines": {
    "node": ">=12.0.0",
    "npm": ">=6.7.0"
  },
  "workspaces": [
    "src/apps/*/*"
  ],
  "scripts": {
    "lint:contexts": "npx eslint src/contexts --ext .ts --ignore-pattern 'src/apps/**/*'",
    "lint:apps": "npx lerna run lint --stream --concurrency 1",
    "lint": "yarn lint:contexts && yarn lint:apps",
    "test:unit": "NODE_ENV=test jest --config=jest.config.js --verbose",
    "test:integration": "NODE_ENV=test-ci jest --config=jest.config.integration.js --verbose --runInBand",
    "test:local:integration": "yarn start:database && NODE_ENV=test-local jest --config=jest.config.integration.js --verbose --runInBand && yarn stop:database",
    "test": "yarn test:unit && yarn test:local:integration",
    "start:database": "cd docker && docker-compose up -d",
    "stop:database": "cd docker && docker-compose down --rmi local --volumes --remove-orphans",
    "cms:start": "yarn start:database && cd src/apps/cms/serverless && yarn start"
  },
  "dependencies": {
    "uuid": "^3.4.0",
    "uuid-validate": "^0.0.3",
    "mongodb": "^3.6.3"
  },
  "devDependencies": {
    "@faker-js/faker": "^6.2.0",
    "@types/": "faker-js/faker",
    "@types/jest": "^26.0.20",
    "@types/mongodb": "^3.6.3",
    "@types/node": "^14.14.20",
    "@types/uuid": "^8.3.0",
    "@types/uuid-validate": "^0.0.1",
    "@typescript-eslint/eslint-plugin": "^5.15.0",
    "@typescript-eslint/parser": "^5.15.0",
    "aws-sdk": "^2.834.0",
    "eslint": "^7.17.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-config-prettier": "^8.5.0",
    "eslint-import-resolver-alias": "^1.1.2",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jest": "^24.1.3",
    "eslint-plugin-module-resolver": "^1.2.0",
    "eslint-plugin-prettier": "^4.0.0",
    "jest": "^26.6.3",
    "lerna": "^3.22.1",
    "lint-staged": "^10.5.4",
    "prettier": "^2.6.2",
    "ts-jest": "^26.4.4",
    "tscpaths": "^0.0.9",
    "typescript": "^4.1.3",
    "typescript-eslint": "^0.0.1-alpha.0"
  }
}
